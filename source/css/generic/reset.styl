//Eric Meyer Reset
global-reset()

*
    box-sizing border-box
    -webkit-box-sizing border-box
    -moz-box-sizing border-box
    margin 0
    padding 0

body
    font-family $basic-font
    font-weight normal
    color $main-black
    background-color $gray-one

a
    outline 0
    text-decoration none

li
    list-style none
